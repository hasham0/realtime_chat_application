{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2022",
    "moduleResolution": "NodeNext",
    "baseUrl": "src",
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": true
  },
  "include": ["src/**/*", "src/custom-types.d.ts"], // Include all TypeScript files in src and custom types file
  "exclude": ["node_modules", "**/*.spec.ts"] // Exclude node_modules and test files
}
